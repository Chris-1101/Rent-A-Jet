<div class="navbar-wagon">
  <!-- Logo -->

  <%= link_to jets_path do %>
    <img class="img-small" src="https://assets.privejets.com/images/prive-jets-logo-black.jpg"
    alt="">
  <% end %>


  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <!-- Links -->
    <%= link_to "Rent Your Jet", "#", class: "navbar-wagon-item navbar-wagon-link" %>
    <%= link_to "About us", "#", class: "navbar-wagon-item navbar-wagon-link" %>
    <%= link_to "Help", "#", class: "navbar-wagon-item navbar-wagon-link" %>
    <% if user_signed_in? %>
    <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "navbar-wagon-item navbar-wagon-link" %>
    <% else %>
    <%= link_to "Sign In", new_user_session_path,  class: "navbar-wagon-item navbar-wagon-link" %>
    <%= link_to "Register", new_user_registration_path,  class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>




    <!-- Avatar with dropdown menu -->

    <div class="navbar-wagon-item">
      <div class="dropdown">
        <img src="https://cdn-images-1.medium.com/max/800/1*DChYYPZxxnQb8P9vplA9NQ.jpeg" class="avatar dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown">
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li><a href="#">Profile</a></li>
          <li><a href="#">Dashboard</a></li>
          <li><a href="#">Log Out</a></li>
        </ul>
      </div>
    </div>
  </div>
    <!-- TODO with Devise Login -->
    <div class="navbar-wagon-item">
      <div class="dropdown">
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li>
            <%= link_to "#" do %>
              <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
            <% end %>
          </li>
          <li>
            <%= link_to "#" do %>
              <i class="fa fa-cog"></i>  <%= t(".settings", default: "Settings") %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><a href="#">Some mobile link</a></li>
        <li><a href="#">Other one</a></li>
        <li><a href="#">Other one</a></li>
      </ul>
    </div>
  </div>
</div>
