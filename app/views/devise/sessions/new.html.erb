<div class="container">
  <div class="row img-start">
    <div class="col-xs-6 col-xs-offset-3">
      <h2 class="login-title">Log in</h2>
      <div class="page-container">
      <div id="page-login">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
            <%= f.input :email,
            required: false,
            autofocus: true,
            input_html: { autocomplete: "email", class: "email email-style" } %>
            <%= f.input :password,
            required: false,
            input_html: { autocomplete: "current-password", class: "password password-style" }  %>
            <%= f.input :remember_me,
            class: "checkbox-style",
            as: :boolean if devise_mapping.rememberable? %>
            <%= f.submit %>
          </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", :class=>"btn btn-success btn-lg" %>
        </div>

          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
