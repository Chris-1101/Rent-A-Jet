<div class="booking-container">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-8 col-md-offset-2 col-md-6 col-md-offset-3">
        <div class="card" style="background-image: url('https://images.unsplash.com/photo-1540962351504-03099e0a754b?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=cdc84c9290e90088f8ab78270ee1ffdf&auto=format&fit=crop&w=500&q=60');">
        </div>
      </div>
      <div class="col-xs-12 col-sm-8 col-md-offset-2 col-md-6 col-md-offset-3">
        <h3>Booking Confirmed</h1>
        <p><span class="booking-align">Jet:</span> <%= @jet.name %></p>
        <p><span class="booking-align">Dates:</span> <%= @booking.start_date %> / <%= @booking.end_date %></p>
        <p><span class="booking-align">Destination:</span> <%= @booking.destination %></p>
        <p><span class="booking-align">Passengers:</span> <%= @booking.passengers %></p>
        <%= link_to "Back to listing", jets_path %>
      </div>
    </div>
  </div>
</div>
